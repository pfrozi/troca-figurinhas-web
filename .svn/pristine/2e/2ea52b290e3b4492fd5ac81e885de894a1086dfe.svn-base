@model TrocaFigurinhas.Models.Persistence.Album

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Album @Model.Id</h2>
<div>
    <span class="textLabel">Álbum:</span>
    <span class="textData">@Model.Titulo</span>
</div>
<div>
    <span class="textLabel">Nome:</span>
    <span class="textData">@Model.Titulo</span>
</div>
<div>
    <span class="textLabel">Descrição:</span>
    <span class="textData">@Model.Descricao</span>
</div>

<h3>Figurinhas</h3>
<ul>
    @foreach (var figurinha in Model.Figurinhas)
    { 
        <li>
            <a class="FigurinhaDetalhe" idDetalhe="@("Figurinha_" + figurinha.Id)">@(figurinha.Nome +" (" + @figurinha.Apelido + ")" + " - " + @figurinha.Equipe)</a>
            @Html.Partial("_FigurinhaPartial", figurinha, new ViewDataDictionary { { "index", "Figurinha_" + figurinha.Id } })
        </li>
    }
</ul>