@model TrocaFigurinhas.Models.ModelView.OfertaTrocaModelView
           
<div id="@("TrocasPossiveis_"+@Model.Oferta.Id)" class="OfertaTrocasDetalheView" title="Realizar Troca">
    <div class="OfertaTrocasDetalheDiv">
        <h5>Oferta Selecionada</h5>
        @Html.Partial("_OfertaPartial", Model.Oferta)
    </div>
    <div class="OfertaTrocasDetalheDiv">
        <h5>Minhas Ofertas - Possíveis Trocas</h5>
        @foreach(var oferta in Model.MinhasOfertas)
        {
            <div>
                @Html.Partial("_OfertaPartial", oferta)
            </div>
            <div>  
                @Html.ActionLink("Trocar!",
                                 "EfetuarTroca",
                                 "Troca",
                                 new { idOferta = oferta.Id, idOfertaSolicitada = Model.Oferta.Id },
                                 null)
            </div>
        }
    </div>
</div>